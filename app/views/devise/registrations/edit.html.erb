<div class="card">
  <div class="card-header">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="input-group mb-3">
          <%= f.label :email, class:"input-group-text"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="input-group mb-3">
          <%= f.label :name, class:"input-group-text" %><br />
          <%= f.text_field :name, class:"form-control" %>
        </div>

        <div class="input-group mb-3">
          <%= f.label :phone, class:"input-group-text" %><br />
          <%= f.text_field :phone, class:"form-control"%>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
       <i>(leave blank if you don't want to change it)</i><br />
          <div class="input-group mb-3">

            <%= f.label :password, class:"input-group-text"%>

            <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:  if @minimum_password_length
                                                                                                                  "#{@minimum_password_length} characters minimum"
                                                                                                              end %>
          </div>

        <div class="input-group mb-3">
          <%= f.label :password_confirmation, class:"input-group-text" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>


        <i>(we need your current password to confirm your changes)</i><br />
        <div class="input-group mb-3">
          <%= f.label :current_password, class:"input-group-text" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class:"btn btn-outline-dark" %>
        </div>
        <br>
      <% end %>
    </div>
</div>

<br><br>

<div class="card">
  <div class="card-header">
    <h4>Cancel my account</h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">Unhappy?</h5>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-outline-danger" %>
  </div>
</div>

<br>
<%= link_to "Back", :back %>
