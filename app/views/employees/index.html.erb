<%if user_signed_in?%>
  <table class="table table-striped table-hover table-bordered datatable">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Vk</th>
        <th>Organization</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr id="<%= employee.id %>">
          <%if employee.user == current_user%>
            <td><%= link_to "#{employee.first_name} #{employee.second_name}", employee, style:"color:#212529;"%></td>
            <td><%= employee.email %></td>
            <td><%= employee.phone %></td>
            <td class="vk" id="vk"><%= employee.vk %></td>
            <td><%= current_user.name %></td>
            <td><%= link_to employee, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash" style="color:#212529;"></i>
            <% end %>
            </td>
          </tr>
          <%end%>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Employee', new_employee_path, class:"btn btn-outline-dark"%>
<%else%>
  <h1>Hello World</h1>
<%end%>
